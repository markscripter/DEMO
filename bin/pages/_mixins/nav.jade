mixin nav(icon, links, className)
  nav(class=className role="navigation")
    a.menu-trigger(aria-haspopup="true")
      svg(class=className + "-icon")
        use(xlink:href=icon)
    block main-nav
      ul.menu-content(aria-hidden="true" aria-label="menu")
        each link in links
          li
            a(href=link.route)= link.text